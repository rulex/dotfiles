background yes
use_xft yes
xftfont Bitstream Vera Sans Mono:size=9
override_utf8_locale yes
xftalpha 0.8
update_interval 1
total_run_times 0
own_window yes
own_window_class Conky
own_window_type normal
own_window_transparent yes
own_window_hints undecorate,below,sticky,skip_taskbar,skip_pager
own_window_colour hotpink
text_buffer_size 4096
minimum_size 10 10
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes
stippled_borders 0
border_inner_margin 10
border_width 1
default_color white
default_shade_color black
default_outline_color black
alignment top_left
gap_x 3850
#gap_x 20
gap_y 5
no_buffers yes
uppercase no
cpu_avg_samples 2
net_avg_samples 2
use_spacer none
double_buffer yes

hddtemp_host 10.0.0.10
hddtemp_port 7634

